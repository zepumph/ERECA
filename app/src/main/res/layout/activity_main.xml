<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobilecomputing.com.ereca.MainActivity"
    android:orientation="vertical">

    <FrameLayout android:id="@+id/preview"
        android:layout_weight="1" android:layout_width="1px"
        android:layout_height="1px">

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_pic_taken"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/et_notepad"
        android:hint="@string/et_hint"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_save"
        android:onClick="sendNote"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/switch_user"
        android:onClick="switchUser"/>

</LinearLayout>